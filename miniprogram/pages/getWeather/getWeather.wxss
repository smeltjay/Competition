.root {
   width: 100%;
   height: 1250rpx;
   background-color: #70c7da;
   position: relative;
}

.background-image{
  height : 100%;
   position: absolute;
   width: 100%;
   left: 0px;
   top: 0px;
}
.content{
   position: absolute;
   width: 100%;
   height: 100%;
   left: 0px;
   top: 0px;
   color: white;
}
.top{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}
.loaction{
  display: flex;
  padding: 20rpx;
  font-size: large;
}
.temperature{
  padding: 20rpx;
  color: white;
  font-weight: 600;
  font-size: 150rpx;
}
.state{
  display: flex;
  padding: 20rpx;
  font-size: larger;
}
.state image{
  width: 80rpx;
  height: 80rpx;
}
.bottom1{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  border-top: solid 1rpx white;
  border-radius: 10%;
}
.bottom2{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1rpx white;
  border-radius: 10%;
}
.bottom-left{
  flex: 3;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
  /* justify-content: space-around; */
  border-right: solid 1rpx white;
}
.title{
  padding: 0rpx 0rpx 20rpx 0rpx;
  justify-content: center;
  align-items: center;
}
.contents{
  font-size: 50rpx;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-right{
  flex: 3;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
}
